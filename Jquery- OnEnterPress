


function CheckEnterPress(e) {
            if (e.which == 13) {
                document.getElementById("btn_SubmitLogin").click();
            }
        }
        
        
           <asp:TextBox ID="txt_Password" runat="server" TextMode="Password" placeholder="Password" TabIndex="2" class="form-control" ClientIDMode="Static" onkeypress="CheckEnterPress(event);"></asp:TextBox>
           
           <asp:LinkButton ID="btn_SubmitLogin" runat="server" ClientIDMode="Static" CssClass="btn btn-red" TabIndex="3" Style="float: right;" OnClick="btn_SubmitLogin_Click" OnClientClick="ShowLoader()">Login</asp:LinkButton>
